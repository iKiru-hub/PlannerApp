WindowManager:
    ClockWindow:


<ClockWindow>:
    name: "clock_window"

    display: display

    FloatLayout:

        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            id: display
            text: "00:00:00"
            font_size: 100
            color: 0.7, 0.7, 0.7, 1
            pos_hint: {"center_x": .5, "center_y": .5}

        # quit
        Button:
            pos_hint: {"x": 0.7, "y": 0.13}
            size_hint: 0.115, 0.14

            on_release:
                root.quit()
                app.stop()

            background_color: 0.7, 0.8, 1, 1

