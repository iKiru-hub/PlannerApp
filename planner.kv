# SCHEDULE JOBS #

<NewJob>:

    name: 'new_job_window'

    job_name: job_name
    priority: priority
    title: title
    hours: hours
    min: min
    duration: duration
    type_task: type_task
    type_project: type_project
    commands: commands
    newjob_window_image: newjob_window_image



    FloatLayout:

        canvas.before:
            Color:
                rgba: 0.8, 0.8, 0.8, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            id: newjob_window_image
            source: r'media/NewJob window/newjob_window.png'
            allow_stretch: True
            keep_ratio: True

        Label:
            id: title
            text: ""
            font_size: 20
            bold: True
            color: 0.3, 0.2, 0.1, 1
            pos_hint: {"x": 0, "y": 0.4}


        GridLayout:
            cols: 2
            rows: 5
            pos_hint: {"x": 0, "y": 0.25}
            size_hint: 0.9, 0.5

            #
            Label:
                text: "name"
                font_size: 17
                color: 0.1, 0.1, 0.1, 1

            TextInput:
                id: job_name
                multiline: False
                background_color: 1, 1, 1, 1
                base_direction: "rtl"
                padding_x: 10, 130
                padding_y: 14, 1
                font_size: 17

            #
            Label:
                text: "type"
                font_size: 17
                color: 0.1, 0.1, 0.1, 1

            GridLayout:
                cols: 2

                Button:
                    id: type_task
                    text: "task"
                    font_size: 17
                    on_press:
                        root.set_job_type(jobtype='task')

                Button:
                    id: type_project
                    text: "project"
                    font_size: 17
                    on_press:
                        root.set_job_type(jobtype='project')

            #
            Label:
                text: "priority"
                font_size: 17
                color: 0.1, 0.1, 0.1, 1

            TextInput:
                id: priority
                multiline: False

                background_color: 1, 1, 1, 1
                base_direction: "rtl"
                padding_x: 10, 135
                padding_y: 14, 1
                font_size: 17

            #
            Label:
                text: "h deadline"
                font_size: 17
                color: 0.1, 0.1, 0.1, 1

            GridLayout:
                cols: 4

                TextInput:
                    id: hours
                    multiline: False

                    background_color: 1, 1, 1, 1
                    base_direction: "rtl"
                    padding_x: 2, 30
                    padding_y: 14, 1
                    font_size: 17

                Label:
                    text: "h"
                    font_size: 17
                    color: 0.1, 0.1, 0.1, 1

                TextInput:
                    id: min
                    multiline: False

                    background_color: 1, 1, 1, 1
                    base_direction: "rtl"
                    padding_x: 2, 30
                    padding_y: 14, 1
                    font_size: 17

                Label:
                    text: "m"
                    font_size: 17
                    color: 0.1, 0.1, 0.1, 1

            Label:
                text: "duration"
                font_size: 17
                color: 0.1, 0.1, 0.1, 1

            GridLayout:
                cols: 2

                TextInput:
                    id: duration
                    multiline: False
                    background_color: 1, 1, 1, 1
                    base_direction: "rtl"
                    padding_x: 5, 65
                    padding_y: 14, 1
                    font_size: 17

                Label:
                    text: "m"
                    font_size: 17
                    color: 0.1, 0.1, 0.1, 1

        BoxLayout:

            id: commands
            orientation: "horizontal"
            pos_hint: {"x": 0.34, "y": 0.03}
            size_hint: 0.31, 0.1
            spacing: 21

            Button:
                on_press:
                    root.change_image(flag="check")

                on_release:
                    root.check()

                background_color: 0, 0, 0, 0

            Button:
                on_press:
                    root.change_image(flag="clear")

                on_release:
                    root.change_image()
                    root.clear()

                background_color: 0, 0, 0, 0

            Button:
                on_press:
                    root.change_image(flag="submit")

                on_release:
                    root.submit()

                background_color: 0, 0, 0, 0

            # return
            Button:
                on_press:
                    root.change_image(flag="return")

                on_release:
                    root.returning()

                background_color: 0, 0, 0, 0

# Task #

<TaskObject>:

    rank_pos: rank_pos
    label: label
    score: score
    deadline_clock: deadline_clock
    status: status
    task_functions: task_functions
    job_icons_image: job_icons_image

    size_hint: 1, 0.1

    Image:
        id: job_icons_image
        source: r"media/Job obj/job_icons.png"
        pos: self.parent.x + 285, self.parent.y
        allow_stretch: True
        keep_ratio: True

    GridLayout:
        cols: 6
        size_hint: 1., 1
        pos_hint: {"x": 0.015, "top": 1}

        Label:
            id: rank_pos
            text: ""
            font_size: 17
            color: 0.1, 0.2, 0.1, 1

        Label:
            id: label
            text: ""
            font_size: 17
            color: 0.1, 0.2, 0.1, 1

        Label:
            id: score
            text: ""
            font_size: 17
            color: 0.1, 0.2, 0.1, 1

        Label:
            id: deadline_clock
            text: ""
            font_size: 17
            color: 0.1, 0.2, 0.1, 1

        Label:
            id: status
            text: ""
            font_size: 17
            color: 0.1, 0.2, 0.1, 1

        BoxLayout:

            id: task_functions
            orientation: "horizontal"
            size_hint: 1.4, 0.005
            padding: 16.

            Button:
                on_press:
                    root.change_image(flag="play")

                on_release:
                    root.change_image()
                    app.root.current = "interval_handler"
                    app.root.transition.direction = "left"
                    app.root.current_screen.load_data(data=root.provide_focus_data())

                background_down: ''
                background_normal: ''
                background_color: 0.85, 1, 0.9, 0.

            Button:
                on_press:
                    root.change_image(flag="done")

                on_release:
                    root.change_image()
                    app.root.current_screen.jobs_manager.completed_job(rank=root.rank)

                background_down: ''
                background_normal: ''
                background_color: 0.85, 1, 0.9, 0.

            Button:
                on_press:
                    root.change_image(flag="edit")

                on_release:
                    root.change_image()
                    app.root.current_screen.jobs_manager.edit_job(rank=root.rank)

                background_down: ''
                background_normal: ''
                background_color: 0.85, 1, 0.9, 0.

            Button:
                on_press:
                    root.change_image(flag="delete")

                on_release:
                    root.change_image()
                    app.root.current_screen.jobs_manager.delete_job(rank=root.rank)

                background_down: ''
                background_normal: ''
                background_color: 0.85, 1, 0.9, 0.


